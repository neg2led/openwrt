/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "armada-372x.dtsi"

/ {
	model = "TP-Link Omada OC200";
	compatible = "tplink,oc200", "marvell,armada3720";

	aliases {
		led-failsafe = &led_status;
		led-upgrade = &led_status;
		mmc0 = &sdhci0;
		serial0 = &uart0;
		mdio0 = &mdio;
	};

	chosen {
		bootargs = "console=ttyMV0,115200";
		stdout-path = "serial0:115200n8";
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x20000000>;
	};

	soc {
		internal-regs {
			bm: bm@c0000 {
				compatible = "marvell,armada-380-neta-bm";
				reg = <0xc0000 0xac>;
				clocks = <&sb_periph_clk 9>;
				internal-mem = <&bm_bppi>;
				status = "okay";
			};

			bm_bppi: bm-bppi@c8000 {
				compatible = "mmio-sram";
				reg = <0xc8000 0x1000>;
				clocks = <&sb_periph_clk 9>;
				no-memory-wc;
				status = "okay";
			};
		};
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-0 = <&system_led_pins>;
		pinctrl-names = "default";

		led_status: status {
			label = "green:status"; /* marked "Cloud" on casing */
			gpios = <&gpiosb 1 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};

	keys {
		compatible = "gpio-keys";
		pinctrl-0 = <&system_reset_pins>;
		pinctrl-names = "default";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpiosb 4 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};
};

&avs {
	status = "okay";
};

&pinctrl_sb {
	system_led_pins: system-led-pins {
		marvell,pins = "mpp1";
		marvell,function = "gpio";
	};

	system_reset_pins: system-reset-pins {
		marvell,pins = "mpp4";
		marvell,function = "gpio";
	};
};

&spi0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi_quad_pins &spi_cs1_pins>;

	flash0: spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>; /* Chip select 0 */
		spi-max-frequency = <104000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0xf0000>;
				read-only;
			};

			partition@1 {
				label = "u-boot-env";
				reg = <0xf0000 0x10000>;
			};
		};
	};
};

&crypto {
	statys = "okay";
};

&uart0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&eth0 {
	status = "okay";

	phy-mode = "rgmii";
	buffer-manager = <&bm>;
	bm,pool-long = <1>;
	bm,pool-short = <3>;

	fixed-link {
		speed = <100>;
		full-duplex;
	};
};

&mdio {
	status = "okay";

	phy1: phy@0 {
		reg = <0>;
	};

	phy2: phy@1 {
		reg = <1>;
	};

	switch0: switch@10 {
		compatible = "qca,qca8236";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x10>;

		dsa,member = <0 0>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				label = "cpu";
				ethernet = <&eth0>;
				phy-mode = "mii";

				fixed-link {
					speed = <100>;
					full-duplex;
				};
			};

			port@1 {
				reg = <1>;
				label = "lan0";
				phy-handle = <&phy1>;
			};

			port@2 {
				reg = <2>;
				label = "lan1";
				phy-handle = <&phy2>;
			};
		};
	};
};

&usb2 {
	status = "okay";
};

&usb3 {
	status = "okay";
};

&sdhci0 {
	#address-cells = <1>;
	#size-cells = <0>;
	bus-width = <8>;
	mmc-ddr-1_8v;
	mmc-hs400-1_8v;
	non-removable;
	no-sd;
	no-sdio;

	marvell,pad-type = "fixed-1-8v";

	pinctrl-names = "default";
	pinctrl-0 = <&mmc_pins>;
	status = "okay";

	emmc0: mmccard@0 {
		reg = <0>;
		compatible = "mmc-card";
	};
};
